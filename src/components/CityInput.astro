<!-- City Input Form -->
<section id="plant" class="bg-white/50">
  <input type="text" id="city-input" placeholder="Enter city name" />
  <button id="city-search-button">Search</button>
</section>

<script>
  const citySearchButton = document.getElementById('city-search-button') as HTMLButtonElement;
  const cityInput = document.getElementById('city-input') as HTMLInputElement;

  const searchCity = () => {
    const cityName = cityInput?.value.trim();
    if (cityName) {
      // Dispatch a custom event with the city name
      const event = new CustomEvent('citySearch', { detail: { cityName } });
      window.dispatchEvent(event);
    }
  };

  citySearchButton?.addEventListener('click', searchCity);

  cityInput?.addEventListener('keypress', (event) => {
    if (event.key === 'Enter') {
      searchCity();
    }
  });
</script>