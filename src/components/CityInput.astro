<!-- City Input Form -->
<section>
  <input type="text" id="city-input" placeholder="Enter city name" />
  <button id="search-button" style="margin-top: 10px; border: 0.0625em solid black; border-radius: 0.3125em;">Search</button>
</section>

<script>
  const searchButton = document.getElementById('search-button') as HTMLButtonElement;
  const cityInput = document.getElementById('city-input') as HTMLInputElement;

  const searchCity = () => {
    const cityName = cityInput?.value.trim();
    if (cityName) {
      // Dispatch a custom event with the city name
      const event = new CustomEvent('citySearch', { detail: { cityName } });
      window.dispatchEvent(event);
    }
  };

  searchButton?.addEventListener('click', searchCity);

  cityInput?.addEventListener('keypress', (event) => {
    if (event.key === 'Enter') {
      searchCity();
    }
  });
</script>

<!-- Styling -->
<style>
  section {
    position: absolute;
    left: 78%; /* Align to the right side, matching the plant info alignment */
    top: 35%; /* Match the vertical position of the plant info */
    transform: translate(-50%, -50%);
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
</style>