---
const { gid } = Astro.props;
const res = await fetch('https://cscd488group3-bloombuddy.netlify.app/.netlify/functions/getGroupMembersByRole', {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({gid , role_g: 2 }),
        });
const data = await res.json();
console.log("(GroupInfo.astro): ", data);
---

<ul>
  {data.map((member: { fname: unknown; lname: unknown; uid: unknown; }) => (
    <li>
      {member.fname} {member.lname} ({member.uid})
    </li>
  ))}
</ul>