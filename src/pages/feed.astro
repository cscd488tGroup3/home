---
Astro.props.pageTitle = "Feed";
import Layout from "../layouts/Layout.astro"
---

<Layout>
    <h1>Post Feed</h1>
    <form id="postForm">    
        <label for="images">Choose an image to post:</label>
        <input type="file" id="images" name="images" accept="image/jpeg, image/png, image/webp" required>
        <label for="caption">Caption the Post:</label>
        <input type="text" id="caption" name="caption" required>
        <button type="submit">Create Post</button>
    </form>

    <div id="postContainer">
        <!-- Posts will appear here -->
    </div>

    <script>
        const postForm = document.getElementById('postForm');
        const postContainer = document.getElementById('postContainer');

        postForm.addEventListener('submit', (event) => {
            event.preventDefault();

            const imageInput = document.getElementById('images');
            const captionInput = document.getElementById('caption');

            if (imageInput.files.length === 0) {
                alert('Please select an image to post.');
                return;
            }

            const file = imageInput.files[0];
            const caption = captionInput.value;

            const reader = new FileReader();
            reader.onload = function (e) {
                const post = document.createElement('div');
                post.classList.add('post');

                post.innerHTML = `
                    <div class="image-container">
                        <img src="${e.target.result}" alt="Post Image" class="post-image">
                    </div>
                    <p class="post-caption">${caption}</p>
                    <div class="menu-container">
                        <button class="menu-button">â‹®</button>
                        <div class="menu-options hidden">
                            <button class="confirm-delete">Delete</button>
                        </div>
                    </div>
                `;

                const menuButton = post.querySelector('.menu-button');
                const menuOptions = post.querySelector('.menu-options');
                const confirmDelete = post.querySelector('.confirm-delete');

                // Toggle menu visibility
                menuButton.addEventListener('click', () => {
                    menuOptions.classList.toggle('hidden');
                });

                // Confirm delete
                confirmDelete.addEventListener('click', () => {
                    const confirm = window.confirm('Are you sure you want to delete this post?');
                    if (confirm) {
                        post.remove();
                    }
                });

                postContainer.appendChild(post);
            };

            reader.readAsDataURL(file);

            // Reset the form
            postForm.reset();
        });
    </script>

    <style>
        #postContainer {
            margin-top: 20px;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 15px;
        }
        .post {
            border: 1px solid #ccc;
            padding: 10px;
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: #f9f9f9;
            border-radius: 8px;
            position: relative;
        }
        .image-container {
            width: 150px;
            height: 150px;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 8px;
            background-color: #ddd;
            border: 2px solid #333;
        }
        .post-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        .post-caption {
            margin: 10px 0;
            text-align: center;
            font-size: 12px;
            color: #666;
            font-style: italic;
        }
        .menu-container {
            position: absolute;
            top: 10px;
            right: 10px;
        }
        .menu-button {
            background: none;
            border: none;
            font-size: 18px;
            cursor: pointer;
        }
        .menu-options {
            position: absolute;
            top: 30px;
            right: 0;
            background: white;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            display: flex;
            flex-direction: column;
        }
        .menu-options.hidden {
            display: none;
        }
        .confirm-delete {
            background-color: red;
            color: white;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
            border-radius: 4px;
        }
        .confirm-delete:hover {
            background-color: darkred;
        }
    </style>
</Layout>